generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Soil {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  geometry    Json     
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProtectedArea {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  area        Float
  geometry    Json     
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model River {
  id          Int      @id @default(autoincrement())
  name        String
  length      Float
  geometry    Json     
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Road {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  length      Float
  geometry    Json     
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DigitalElevationModel {
  id          Int      @id @default(autoincrement())
  name        String
  resolution  String
  geometry    Json     
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Geology {
  id          Int      @id @default(autoincrement())
  type        String
  description String?
  geometry    Json     
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}